<%= simple_form_for @booking, remote: true do |f| %>
  <div class="modal-body">
    <div id="errors"></div>

    <p class="small"><b>Data: </b><%= l(@booking.date || params[:date].to_date) %></p>
    <%= f.input :date, as: :hidden, input_html: { value: @booking.date || params[:date] } %>

    <p class="small"><b>Hora: </b><%= @booking.time&.strftime('%H:%M') || params[:time] %></p>
    <%= f.input :time, as: :hidden, input_html: { value: @booking.time || params[:time] } %>

    <%= f.input :description, required: true, input_html: { class: 'form-control' } %>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Fechar</button>
    <%= f.button :submit, class: 'btn btn-primary btn-sm', data: { disable_with: 'Salvando...' } %>
  </div>
<% end %>
